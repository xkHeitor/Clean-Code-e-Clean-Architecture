{
  "compilerOptions": {
  "incremental": true,
  "target": "es6",
  "module": "commonjs",
  "outDir": "./dist",
  "strict": true, // depende do seu nível de conhecimento em TypeScript, recomendo começar com false
  "esModuleInterop": true
  },
  "include": [
    "./src/**/*.ts",
    "./test/**/*.ts"
  ],
  "exclude": [
    "./node_modules/*",
    "dist"
  ]
}